<div class="container">
  <h2>Review Comment:</h2>
  <div class="row">
    
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">   
      <strong><%= @comment.commenter %></strong><br>
      <%= @comment.body %><br>
      Reviewed: <%= @comment.reviewed %><br>
      Approved: <%= @comment.approved %>
      <!-- Raty individual rating here-->
      <div class="rated" data-score="<%= @comment.rating %>"></div>   
    </div>  

    <br>

    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">

      <%= form_for([@comment.article, @comment]) do |f| %>

        <% if signed_in? && current_user.moderator? %>
          <div class="field">
            <%= f.label :reviewed, class: "checkbox inline" do  %>
              <%= f.check_box :reviewed %>
              <span>Reviewed</span>
            <% end %>
          </div>
        <% end %>

        <% if signed_in? && current_user.editor? %>

          <div class="field">
            <%= f.label :approved, class: "checkbox inline" do  %>
              <%= f.check_box :approved %>
              <span>Approved</span>
            <% end %>
          </div>
        <% end %>  

        <br>

        <div class="actions">
          <%= f.submit "Save", class: "btn btn-success" %>
        </div>

        <br>

        <div>
          <%= link_to 'Back', article_path(@article), class: "btn btn-info" %>
        </div>

      <% end %>

    </div>
  </div>    
</div>